---
import ReactIcon from "./React.astro"
import JavascriptIcon from "./Javascript.astro"
import HtmlIcon from "./Html.astro"
import CssIcon from "./Css.astro"
import GitHub from "./Github.astro"

const TAGS = { 
    REACT : {
         name:"React",
         class: "bg-[#121212] text-sky-300",
         icon: ReactIcon,
    },
    JAVASCRIPT: {
        name:"Javascript",
        class:"bg-[#121212] text-yellow-200",
        icon: JavascriptIcon,
    },

    HTML:{
        name:"HTML",
        class:"bg-[#121212] text-orange-400",
        icon: HtmlIcon ,
    },
    CSS:{
        name:"CSS",
        class:"bg-[#121212] text-blue-300",
        icon: CssIcon,
    },    
    }    
  


const PROJECTS =[
    {
      title: "FUTBOE⚽ - Fixture y cronograma de los partidos del dia EN VIVO",
      description: "Fixture de partidos del dia con horarios y resultados en vivo!",
      link: "https://futboe2-0-zlze.vercel.app",
      github:"https://github.com/Crus10/Futboe2.0",
      image: "/projects/futboe.webp",
      tags: [TAGS.JAVASCRIPT, TAGS.REACT, TAGS.HTML, TAGS.CSS],

    }
]
---
<div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
    <div class="w-full md:w-1/2">
      <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
        <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
      </div>
    </div>
  
    <div class="w-full md:w-1/2 md:max-w-lg">
      <h3 class="text-2xl font-bold text-green-500 dark:text-gray-100">
        {title}
      </h3>
      <div class="flex flex-wrap mt-2">
        <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
  
          <div class="mt-2 text-white dark:text-gray-400">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4"></footer>
            </div>
        </div>
    </article>
    ) )
}
</div>